<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.arnold.MyApp">
    <uses-permission android:name="android.permission.CAMERA"> </uses-permission>
    <uses-permission android:name="android.permission.INTERNET"> </uses-permission>
    <application
        android:allowBackup="true"
        android:label= "@string/app_name"
        android:theme="@style/Theme.AppCompat.Light">
        <activity
            android:name="com.example.arnold.myapp.activities.FirstActivity"
            android:label="@string/first_activity_name"
            android:icon="@mipmap/ic_launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.arnold.myapp.activities.SecondActivity"
            android:label="@string/second_activity_name"
            android:icon="@mipmap/ic_launcher">
        </activity>
        <activity
            android:name="com.example.arnold.myapp.activities.ThirdActivity"
            android:label="@string/third_activity_name"
            android:icon="@mipmap/ic_launcher">
        </activity>

    </application>
</manifest>
